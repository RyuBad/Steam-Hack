<Window x:Class="SteamHack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Steam Hack" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#282828" Height="30" VerticalAlignment="Top">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Steam Hack" Foreground="White" VerticalAlignment="Center" Margin="10,0,505,0"/>
                <Button Content="Demande d'ajout" Click="AddGame" Height="22" Margin="93,4,459,4">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="7">
                                <ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Ajouter ton jeu (.exe)" Margin="5" Click="Addexe"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side: Search and Games List -->
            <StackPanel Grid.Column="0" Background="#3C3C3C" Width="200">
                <!-- Search Box -->
                <TextBox Text="Rechercher un jeu..." Margin="5"
                         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"
                         TextChanged="TextBox_TextChanged"/>

                <!-- List of Games -->
                <ListBox Name="GameList" ItemsSource="{Binding JeuxFiltrés}" SelectionChanged="ListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{Binding Image}" Width="20" Height="20" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Nom}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>

            <!-- Right Side: Game Banner & Actions -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top">
                <!-- Bannière du jeu -->
                <Image Name="GameBanner" Height="146" Visibility="Collapsed" Stretch="Fill"/>

                <!-- Bouton Jouer -->
                <Button Name="PlayButton" Content="Jouer" Height="29" Width="120"
                        Visibility="Collapsed" Click="PlayButton1" HorizontalAlignment="Left"/>

                <!-- Texte cliquable pour sélectionner le .exe -->
                <TextBlock Name="SelectExeText" Text="Le jeu est-il déjà installé ?" Foreground="Blue" Margin="10" HorizontalAlignment="Left" Cursor="Hand" Visibility="Collapsed" MouseDown="SetGameExePath_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>